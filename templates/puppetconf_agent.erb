[agent]
  server = <%= @puppetmaster %>
  masterport = <%= @puppetmasterport %>

  logdir = <%= @logdir %>
  rundir = /var/run/puppet

<% if(@waitforcert) -%>
  waitforcert=<%= @waitforcert %>
<% end -%>
  show_diff =<%= @showdiff %>

<% if defined?(@environment) -%>
  environment=<%= @environment %>
<% end -%>
